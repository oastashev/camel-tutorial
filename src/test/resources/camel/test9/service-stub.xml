<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd ">

    <camel:routeContext id="stubRouteContext" xmlns="http://camel.apache.org/schema/spring">

        <route id="stubRoute">
            <from uri="direct:resolveIpByStub"/>
            <transform>
                <mvel>
                    response.body = new java.util.HashMap();
                    response.body['ip'] = request.body;
                    response.body['city'] = 'Stub City';
                    response.body['country'] = 'Stub Country';
                    response.body['GeoIpServiceName'] = 'Stub';
                    response.body;
                </mvel>
            </transform>
        </route>

    </camel:routeContext>

</beans>